#!/usr/bin/env bash
# DocVault wrapper script
# This script is deprecated - please use ./scripts/install-dv.sh to set up the 'dv' command

# Get the directory where this script is located
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
PROJECT_DIR="$( cd "$SCRIPT_DIR/.." && pwd )"

# Check if .venv/bin/dv exists
if [ -f "$PROJECT_DIR/.venv/bin/dv" ]; then
    exec "$PROJECT_DIR/.venv/bin/dv" "$@"
else
    echo "Error: DocVault is not installed in the virtual environment."
    echo "Please run './scripts/install-dv.sh' to set up the 'dv' command properly."
    exit 1
fi
